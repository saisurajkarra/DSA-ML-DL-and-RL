    "from itertools import permutations\n",
    "def nextnumber(n):\n",
    "    number = list(map(int,n))\n",
    "    res = permutations(n)\n",
    "    res2=[]\n",
    "    for i in res:\n",
    "        res2.append(int(''.join(i)))\n",
    "    res2 = sorted(res2)\n",
    "    return (res2[res2.index(int(n))+1])\n",
    "n = '2540'\n",
    "print(nextnumber(n))"
   ]
